<div class="search-result">
    <% temp = params[:title] != '' ? params[:title] : @category + " Category" %>
    <% if @results.any? %>
        <h3>Search results for '<%= temp %>'</h3>
        <div class="my-4">
            <div class="row row-cols-1 row-cols-md-4 g-4">
                <% @results.each do |book| %>
                    <div class="card-group">
                        <div class="card">
                            <%= link_to(image_tag(book.img_url, alt: book.title, class: 'card-img-top'), book_path(book))%>
                            <div class="card-body text-center">
                                <h6 class="card-title"><%=book.title%></h6>
                                <p class="card-text"><small class="text-muted"><%=book.author%></small></p>
                                <p class="card-text text-danger"><b>Price: </b>$ <%=book.price%>.00</p>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
        <%= paginate @results %>
       
    <% else %>
        <p class="alert alert-warning">No results found for '<%= temp %>'</p>
    <% end %>
</div>
