<div class="banner-shop">
    <h2>Shop <%=@shop.name%></h2>
</div>
<div class='container book-detail g-md-2 my-5'>
    <div class="row">
        <div class="col-md-4">
            <img src="<%=@book.img_url%>">
        </div>

        <div class="col-md-6">
            <h1 class='mb-4'><%=@book.title%></h1>
            <div class='author'>
                <b>Author: </b> <span><%=@book.author%></span>
            </div>
            <div class='price my-3'>
                <b>Price: </b> $ <%=@book.price%>.00
            </div>
            <div class='my-3'>
               <p><%=@book.descrition%></p>
            </div>
            <div class="container-fluid my-3">
                <div class="row">
                    <div class="col-4">
                        <b>Publisher: </b>
                    </div>
                    <div class="col ms-auto"><%=@book.publisher%></div>
                </div>
                <div class="row">
                    <div class="col-4">
                       <b>Year of publishing: </b>
                    </div>
                    <div class="col ms-auto"><%=@book.year%></div>
                </div>
                <div class="row">
                    <div class="col-4">
                       <b>Available in stock: </b>
                    </div>
                    <div class="col ms-auto"><%=@book.amount%></div>
                </div>
                <div class="row">
                    <div class="col-4">
                       <b>Product ID: </b>
                    </div>
                    <div class="col ms-auto"><%=@book.id%></div>
                </div>
                <div class="row">
                    <div class="col-4">
                       <b>Category: </b>
                    </div>
                    <div class="col ms-auto">
                        <%= @categories.join(", ") %>
                    </div>
                </div>
            </div>

            <% if user_signed_in? %>
                <div class='buynow'>
                    <div class='row g-4'>
                            <input type="number" value=1 min="1" max="<%=@book.amount%>">
                            <button class="btn btn-dark ms-3"><i class="bi bi-cart3 px-2"></i>Add to cart</button>
                        </div>
                    </div>
                </div>
            <% else %>
             <i>Login to buy this product</i>
            <% end %>
        </div>
    </div>
</div>

<div class="related-book-in-shop">
    <h2>Related Products</h2>
    <div class="my-5">
        <div class="row row-cols-1 row-cols-md-4 g-4">
            <% @shop.books.take(4).each do |book| %>
                <div class="card-group">
                    <div class="card">
                        <%= link_to(image_tag(book.img_url, alt: book.title, class: 'card-img-top'), book_path(book))%>
                        <div class="card-body text-center">
                            <h6 class="card-title"><%=book.title%></h6>
                            <p class="card-text"><small class="text-muted"><%=book.author%></small></p>
                            <p class="card-text text-danger"><b>Price: </b>$ <%=book.price%>.00</p>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
    <div class="d-grid gap-2 col-lg-4 mx-auto">
        <button type="button" class="btn btn-dark btn-lg" >Discovery More Book In Shop</button>
    </div>
</div>