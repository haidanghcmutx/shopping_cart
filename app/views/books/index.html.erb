<div class="banner-shop">
    <h2>Shop <%=@current_shop.name%></h2>
</div>
<div class='shop-page container-md my-4'>
    <div class="row g-4">
        <div class="col-md-3">
            <div class="store-category">
                <h4>Store Category</h4>
                <ul>
                <% @categories.each do |category| %>
                    <li><%=category.name%></li>
                <%end%>
                </ul>
            </div>
            <div class="contact-shop">
                <h4>Contact Vendor</h4>
                <div class="mb-1">
                    <input type="text" class="form-control" id="name" placeholder="Your name">
                </div>
                <div class="mb-1">
                    <input type="text" class="form-control" id="email" placeholder="you@email.com">
                </div>
                <div class="mb-1">
                    <textarea type="text" class="form-control" id="message" rows="3" placeholder="Type your message..."></textarea>
                </div>
                <div class="d-grid mb-1">
                    <button class="btn btn-danger" fullWidth>Send message</button>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="shop-info">
                <div class='shop-summary col-5'>
                    <%= image_tag(asset_path('shop-9.jpg'))%>
                    <h4><%=@current_shop.name%></h4>
                    <div><i class="bi bi-geo-alt-fill"></i><%=@current_shop.address%></div>
                    <div><i class="bi bi-telephone"></i><%=@current_shop.phone%></div>
                    <div><i class="bi bi-star"></i>4.07 rating from 30 reviews</div>
                </div>
            </div>
            <div class="shop-product">
                <h4>Product</h4>
                <div class="search w-50">
                    <%= form_with url: shop_books_path(@current_shop), method: :get, class:"d-flex align-items-center" do |f| %>
                        <%= f.text_field :title, placeholder: "Enter Book title...", class:"form-control me-2 m-auto"%>
                        <%= f.submit "Search", class:'btn btn-danger m-auto w-50'%>
                    <% end %>
                </div>
                <div class="product">
                <div class="row row-cols-1 row-cols-md-4 g-4">
                    <% @books.each do |book| %>
                            <div class="card-group">
                                <div class="card">
                                    <%= link_to(image_tag(book.img_url, alt: book.title, class: 'card-img-top'), book_path(book))%>
                                    <div class="card-body text-center">
                                        <h6 class="card-title"><%=book.title%></h6>
                                        <p class="card-text"><small class="text-muted"><%=book.author%></small></p>
                                        <p class="card-text text-danger"><b>Price: </b><%= number_to_currency book.price%></p>
                                    </div>
                                </div>
                            </div>
                        <% end %>
                    </div>
                    <div class="paginate">
                        <%= paginate @books%>
                    <div>
                </div>
            </div>
        </div>
    </div>
</div>