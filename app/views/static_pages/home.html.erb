<div class="home">
    <div id="homecarouselExampleSlidesOnly" class="carousel slide"  data-bs-ride="carousel" >
        <div class="carousel-inner">
            <div class="carousel-item active" data-bs-interval="5000">
                <%= image_tag asset_path('bg4.jpg'), class: "d-block w-100", alt: "Bookstore Background"%>
                <div class="carousel-caption d-md-block">
                    <h1>Welcome to Bookstore</h1>
                    <p>Reading is away the good idea.</p>
                    <% if user_signed_in? %>
                        <%= link_to "Own your shop now!", shops_new_path, class: "btn btn-success"%>
                    <% else %>
                        <%= link_to "Sign up now!", new_user_registration_path, class: "btn btn-success"%>
                    <% end %>
                </div>
            </div>
            <div class="carousel-item" data-bs-interval="4000">
                <%= image_tag asset_path('bg2.jpg'), class: "d-block w-100", alt: "Bookstore Background" %>
                <div class="carousel-caption d-md-block">
                    <h1>Welcome to Bookstore</h1>
                    <p>Book for cozy home evenings.</p>
                    <% if user_signed_in? %>
                        <%= link_to "Own your shop now!", shops_new_path, class: "btn btn-success"%>
                    <% else %>
                        <%= link_to "Sign up now!", new_user_registration_path, class: "btn btn-success"%>
                    <% end %>
                </div>
            </div>
            <div class="carousel-item" data-bs-interval="4000">
                <%= image_tag asset_path('bg3.jpg'), class: "d-block w-100", alt: "Bookstore Background" %>
                <div class="carousel-caption d-md-block">
                    <h1>Welcome to Bookstore</h1>
                    <p>Home is where the book are.</p>
                    <% if user_signed_in? %>
                        <%= link_to "Own your shop now!", shops_new_path, class: "btn btn-success"%>
                    <% else %>
                        <%= link_to "Sign up now!", new_user_registration_path, class: "btn btn-success"%>
                    <% end %>
                </div>  
            </div>
        </div>
    </div>
    
    <div class="home-content">
        <h2>Discover Your Next Book</h2>
        <div class="my-5">
            <div class="row row-cols-1 row-cols-md-6 g-4">
                <% @books.take(6).each do |book| %>
                    <div class="card-group">
                        <div class="card">
                            <%= link_to(image_tag(book.img_url, alt: book.title, class: 'card-img-top'), book_path(book))%>
                            <div class="card-body text-center">
                                <h6 class="card-title"><%=book.title%></h6>
                                <p class="card-text"><small class="text-muted"><%=book.author%></small></p>
                                <p class="card-text text-danger"><b>Price: </b> <%=number_to_currency book.price%></p>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
        <div class="d-grid gap-2 col-lg-6 mx-auto">
            <%= link_to "Discovery More Book", category_path, class:"btn btn-dark btn-lg" %>
            <%# <button type="button" class="btn btn-dark btn-lg" >Discovery More Book</button> %>
        </div>
    </div>

    <div class="home-contact">
        <h2>Stay in Touch with Our Updates</h2>
        <div class="my-5">
            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-4">
                        <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="Enter your email address">
                    </div>
                    <div class="col-2">
                        <button type="button" class="btn btn-dark"> <i class="bi bi-send-check">  </i> GET IN TOUCH </button>
                    </div>
                </div>
                <div class='row align-items-center justify-content-center policy'>
                    <div class='col-6'>
                        <input type="checkbox"> <span>I agree to the Privacy Policy.</span>
                    </div> 
                </div>
            </div>
        </div>
    </div>

    <div class="home-categories">
        <h2>Choose Your Favorite Category!</h2>
        <div class="my-5">
            <div class="row row-cols-1 row-cols-md-4 g-4">
                <%@category.take(4).each do |item| %>
                    <div class="card-group">
                        <div class="card">
                            <img src="<%=item.img_url%>" class="card-img-top" alt="<%=item.name%>">
                            <div class="card-body">
                                <h5 class="card-title"><%=item.name%></h5>
                                <div class="d-flex">
                                    <%= link_to "Shop Now!", category_path(category: item.id), class:"btn btn-outline-secondary btn-sm ms-auto" %>
                                    <%# <button class="btn btn-outline-secondary btn-sm ms-auto">Shop Now!</button> %>
                                </div>
                            </div>
                        </div>
                    </div>
                <%end%>
            </div>
        </div>
        <div class="d-grid gap-2 col-lg-6 mx-auto">
            <%= link_to "Discovery More Categories", category_path, class:"btn btn-dark btn-lg" %>
            <%# <button type="button" class="btn btn-dark btn-lg" >Discovery More Categories</button> %>
        </div>
    </div>
</div>